<p id="notice"><%= notice %></p>

<%#= link_to 'Add Keyword', new_keyword_path %>

<table>
  <thead>
    <tr>
      <th><h2>Keywords</h2></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @keywords.each do |keyword| %>
      <tr>
        <td><%= keyword.word %></td>

        <td><%= link_to 'Show', keyword %></td>
        <td><%#= link_to 'Edit', edit_keyword_path(keyword) %></td>
        <td><%#= link_to 'Delete', keyword, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

