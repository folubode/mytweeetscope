<p id="notice"><%= notice %></p>

<p>
  <strong>Word:</strong>
  <%= @keyword.word %>
</p>

<h2>Latest Twitts (<%= @keyword.tweets.count %>)</h2>
	<ul>
		<% @keyword.tweets.each do |twitt| %>
		<li> 
			<img src="<%= twitt.user_image_url %>" width="50"> 
			
			<strong><%= twitt.user_screen_name %>:</strong> 
			
			<%= twitt.text %> 
			
			<strong>Twitted: <em> <%= time_ago_in_words(twitt.created_at) %> ago </em></strong>

		</li><hr/><br/>
		<% end %>
	</ul>

<%= link_to 'Edit', edit_keyword_path(@keyword) %> |
<%= link_to 'Back to Keywords', keywords_path %>
